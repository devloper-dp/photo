---
interface Props {
  items: Array<{
    title: string;
    marks: number;
    details: string[];
  }>;
}

const { items } = Astro.props;
---

<div class="space-y-4">
  {items.map(item => (
    <div>
      <h4 class="text-lg font-medium mb-2">{item.title} ({item.marks} marks)</h4>
      <ul class="list-disc pl-6">
        {item.details.map(detail => (
          <li>{detail}</li>
        ))}
      </ul>
    </div>
  ))}
</div>