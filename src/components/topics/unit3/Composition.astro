---
import ContentSection from '../../ContentSection.astro';
import Flowchart from '../../Flowchart.astro';
import MarkingScheme from '../../shared/MarkingScheme.astro';
import { compositionData } from '../../../data/technical-aspects';
import { compositionMarks } from '../../../data/marking-schemes/technical';

---

<ContentSection title="Composition and Camera Techniques (10 Marks)">
  <div class="space-y-6">
    <Flowchart data={compositionData} />
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <h4 class="text-lg font-medium mb-2">Composition Principles</h4>
        <MarkingScheme items={compositionMarks} />
      </div>
      
      <div class="space-y-4">
        <div>
          <h4 class="text-lg font-medium mb-2">Camera Angles</h4>
          <ul class="list-disc pl-6">
            <li>Eye level - Natural perspective</li>
            <li>High angle - Diminishing effect</li>
            <li>Low angle - Empowering view</li>
            <li>Bird's eye - Overview perspective</li>
            <li>Dutch angle - Dynamic tension</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</ContentSection>