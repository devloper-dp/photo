---
import ContentSection from '../../ContentSection.astro';
import Flowchart from '../../Flowchart.astro';

const digitalWorkflow = {
  nodes: [
    { id: "A", label: "Digital Processing" },
    { id: "B", label: "Scanning" },
    { id: "C", label: "Image Editing" },
    { id: "D", label: "Color Correction" },
    { id: "E", label: "Advanced Tools" }
  ],
  connections: [
    { from: "A", to: "B" },
    { from: "A", to: "C" },
    { from: "A", to: "D" },
    { from: "A", to: "E" }
  ]
};
---

<ContentSection title="Digital Processing (20 Marks)">
  <div class="space-y-6">
    <Flowchart data={digitalWorkflow} />
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <h4 class="text-lg font-medium mb-2">Processing Steps</h4>
        <ul class="list-disc pl-6 space-y-2">
          <li>Scanning Fundamentals (5 marks)</li>
          <li>Basic Image Editing (5 marks)</li>
          <li>Color Correction (5 marks)</li>
          <li>Advanced Techniques (5 marks)</li>
        </ul>
      </div>
    </div>
  </div>
</ContentSection>