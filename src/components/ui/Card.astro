---
interface Props {
  title: string;
  description: string;
  href: string;
}

const { title, description, href } = Astro.props;
---

<a href={href} class="block p-6 bg-white rounded-xl shadow-sm hover:shadow-md transition-all duration-200 border border-gray-100 hover:border-indigo-100">
  <h2 class="text-xl font-semibold mb-2 text-gray-900 group-hover:text-indigo-600">{title}</h2>
  <p class="text-gray-600">{description}</p>
</a>